<%= form_tag({:action=>"email",:id=>@invoice.id},:id=>"email_form")  do%>
  To:<%= text_field_tag "to", @email_to, :size=>40 %><br />
  CC:<%= text_field_tag "cc", @email_cc, :size=>40 %><br />
  Subject:<%= text_field_tag "subject", @email_subject, :size=>37%><br />
  Attachment: <%=link_to @attach_title, prettyView_invoice_url(@invoice, :format => "pdf"), :target=>"_blank"%><br />
  <%= text_area_tag "content", @email_content, :size => "40x15" %><br />
  <% if @invoice.status == "Invoice" %>
    Create JE and Mark as Billing Pending?: <%= check_box_tag "mark_billing", "true", true %>
  <% elsif @invoice.status == "Received" %>
    Create JE and Mark as Complete?: <%= check_box_tag "mark_complete", "true", true %>
  <% end %>
<% end %>
