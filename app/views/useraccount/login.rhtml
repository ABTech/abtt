<html>
<head>
  <link href="/layout.css" rel="stylesheet" type="text/css" />
  <meta name="viewport" content="width=200px; initial-scale=1; maximum-scale=1.0; user-scalable=1;"/>

  <title>ABTT: AB Tech Tracker</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.js" type="text/javascript"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(function() {

      /* =iPhone Optimizations=
      window.scrollTo(242,160);
      $("input").blur(function() {
        window.scrollTo(242,160);
      });
      */
      $("#login_box input[type!=submit]").hover(function() {
        $(this).css({"box-shadow": "0 0 15px black"}); 
        },
        function() {
        $(this).css({"box-shadow": "0 0 0 black"}); 
      });

      $("#flash_wrapper").css({"top": "-84px"}).delay("slow").animate({"top": "-20px"}, "slow");
    });
  </script>
  <style type="text/css">
    body {
      background-color: black;
      margin: 0;
      padding: 0;
      font-family: "Helvetica", sans-serif;
    }

    #login_box {
      margin: auto;
      background: black url("/images/login_lam.jpg") top center no-repeat;
      width: 783px;
      height: 385px;
      padding-top: 415px;
    }

    #footer {
      margin-top: 220px !important;
    }


    #login_box div {
      text-align: center;
      margin-top: 10px;
      margin-bottom: 10px;
    }


    #login_box input[type=text]:focus, #login_box input[type=email]:focus, #login_box input[type=password]:focus {
      background: #ccc;
      box-shadow: 0 0 15px #333;
    }
    
    /*
    #login_box input[type=text]:hover, #login_box input[type=email]:hover, #login_box input[type=password]:hover {
      box-shadow: 0 0 15px #333;
    }
    */

    #username, #password {
      width: 215px;
      border-radius: 14px;
      background-color: white;
      border: 1px solid #666;
      height: 28px;
      text-align: center;
    }

    #login_button {
      /*76 x 22
      top: 499px
      left: 356px
      */
      background: transparent url("/images/login_button.png") top left no-repeat;
      width: 76px;
      border: 0px none black;
      height: 22px;
      cursor: pointer;
      text-indent: 100px; /* Move that text away. */
      overflow: hidden;

    }

    #footer, #footer a {
      color: #ccc;
      text-decoration: none; 
    }
    #footer a {
     border: 0px none;
    }
    #footer a:hover {
      color: #82201f;
      text-decoration: underline;
    }
    #flash_wrapper {
      position: fixed;
      background: transparent;
      width: 100%;
      height: 20px;
      text-align: center;
      font-weight: bold;
      text-align: center;
      margin: 0;
      left: 0;
      top: 0;
    }

    #flash {
      width: 50%;
      margin: auto;
      padding: 20px;
      color: white;
      background-color: #900;
      opacity: .9;
      border-bottom: 4px solid red;
      border-left: 4px solid red;
      border-right: 4px solid red;
      border-radius: 4px;
    }


  </style>
</head>
<body>
  <div id="login_box">
  <% unless flash[:error].blank? %>
  <div id="flash_wrapper">
    <p id="flash">
    <%= flash[:error] %>
    </p>
  </div>
  <% end %>
    <% form_tag({:action => "login"}, :novalidate => true) do %>
      <div>
        <%= text_field_tag("login", "", :id => "username", :type => "email", :required => true, :placeholder => "Username") %></td>
      </div>
      <div>
        <%= password_field_tag("password", "", :placeholder => "Password") %></td>
      </div>
      <%= hidden_field_tag("remember_me", "1") %></td>
      <div>
        <%= submit_tag "Log In", :id => 'login_button' %>
      </div>
    <% end %>

  </div>
  </body>
</html>
